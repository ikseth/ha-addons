{
  "name": "Log2Syslog UDP Forwarder",
  "version": "1.1.17",
  "slug": "log2syslog",
  "description": "Reenvía el log de Home Assistant por UDP a un servidor remoto y graba copia local para depuración.",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "map": [
    "config:ro",
    "data:rw"
  ],
  "options": {
    "dest_ip": "192.168.50.62",
    "dest_port": 514,
    "debug": true
  },
  "schema": {
    "dest_ip": "str",
    "dest_port": "int",
    "debug": "bool"
  },
  "arch": ["aarch64","amd64","armv7","i386"]
}

